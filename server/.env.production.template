# Database Mode: direct | hybrid
DB_MODE=hybrid

# ==========================================
# AZURE HYBRID MODE CONFIGURATION
# ==========================================

# Read Pool (Azure SQL Database - for SELECT queries)
DB_READ_SERVER=your-server.database.windows.net
DB_READ_DATABASE=RP_BI_RESUMENES_READ
DB_READ_USER=azureuser
DB_READ_PASSWORD=<set_in_azure_app_service_config>

# Write Pool (On-premise via Azure Hybrid Connection - for INSERT/UPDATE/DELETE)
DB_WRITE_SERVER=10.29.1.14
DB_WRITE_DATABASE=RP_BI_RESUMENES
DB_WRITE_USER=sa
DB_WRITE_PASSWORD=<set_in_azure_app_service_config>

# ==========================================
# ALTERNATIVELY: Use UI Configuration
# ==========================================
# If you prefer to configure via the Admin Panel UI instead of 
# environment variables, you can omit the DB_READ_* and DB_WRITE_* 
# variables above. The system will read configuration from the 
# APP_DB_CONFIG database table instead.

# ==========================================
# OTHER CONFIGURATION
# ==========================================

# JWT Secret for authentication (generate a new secure secret for production)
JWT_SECRET=<generate_new_secret_for_production>

# Email configuration
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=alertas@rostipolloscr.com
SMTP_PASS=<set_secure_password>

# Gemini AI
GEMINI_API_KEY=<set_secure_key>

# Encryption key for database passwords (32 characters)
DB_ENCRYPTION_KEY=<generate_secure_32_character_key>
